<resources>

    <!-- for 20dp of padding at 2.75px/dp at default density -->
    <dimen name="rounded_corner_content_padding">70px</dimen>

    <!-- Radius of the software rounded corners. -->
    <dimen name="rounded_corner_radius">127px</dimen>

    <!-- Adjustment for software rounded corners since corners aren't perfectly round. -->
    <dimen name="rounded_corner_radius_adjustment">22px</dimen>

    <!-- Height of the status bar.
         Do not read this dimen directly. Use {@link SystemBarUtils#getStatusBarHeight} instead.
         -->
    <dimen name="status_bar_height_default">32dp</dimen>

    <!-- Height of area above QQS where battery/time go (equal to status bar) -->
    <dimen name="quick_qs_offset_height">40dp</dimen>

</resources>
